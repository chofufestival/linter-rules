{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "lib": ["ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["**/*.js", "**/*.cjs", "**/*.mjs", "**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
